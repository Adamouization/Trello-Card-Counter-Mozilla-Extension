{
  "manifest_version": 2,
  "name": "Trello Card Counter",
  "short_name": "Card Counter",
  "version": "0.0.8",
  "author": "Adam Jaamour",

  "description": "Counts the number of cards in each trello column.",
  "homepage_url": "https://github.com/Adamouization/Trello-Card-Counter-Mozilla-Extension",

  "icons": {
    "24": "icons/with-background/icon24px.png",
    "48": "icons/with-background/icon.png",
    "96": "icons/with-background/icon@2x.png",
    "192": "icons/with-background/icon@4x.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": {
      "24": "icons/with-background/icon24px.png",
      "48": "icons/with-background/icon.png",
      "96": "icons/with-background/icon@2x.png",
      "192": "icons/with-background/icon@4x.png"
    },
    "default_title": "Trello Card Counter",
    "default_popup": "popup/popup.html"
  }
}