{
  "manifest_version": 2,
  "name": "Trello Card Counter",
  "version": "1.0",

  "description": "Counts the number of cards in each trello column.",
  "homepage_url": "https://github.com",

  "icons": {
    "64": "icons/abacus_64.png",
    "128": "icons/abacus_128.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/abacus_64.png",
    "default_title": "Trello Card Counter",
    "default_popup": "popup/popup.html"
  }
}